<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cybera">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="CyberSafetyApp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">  <!-- Must be true for launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Chatbot Activity -->
        <activity
            android:name=".ChatbotActivity"
            android:exported="false" />

        <!-- Cyber Education Activity -->
        <activity
            android:name=".CyberEducationActivity"
            android:exported="false" />

        <!-- Threat Scanner Activity -->
        <activity
            android:name=".ThreatScannerActivity"
            android:exported="false" />

        <!-- Notification Listener Service -->
        <service
            android:name=".ChatNotificationListener"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">  <!-- Must be true for notification listener -->
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

    </application>

</manifest>

